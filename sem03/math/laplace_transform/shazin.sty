\usepackage{amsmath}
\usepackage{xcolor}
\usepackage{multicol}
\usepackage[top=1in, bottom=1in, left=1in, right=1in]{geometry}
% Define a new tcolorbox environment for section titles
\usepackage{tcolorbox}

% Color definitions
\definecolor{deriveFrame}{HTML}{73FF96}
\definecolor{deriveBg}{HTML}{D2FFDE}
\definecolor{defineBg}{HTML}{FFF89E}


% Color box for derivatios
\newenvironment{derive}[1][]%
{%
    \vspace{0.3cm}
    \begin{tcolorbox}[
            colback=deriveBg,     % Background color (static)
            colframe=deriveFrame,         % Frame color (static)
            coltitle=black,          % Set text color of the frame to black
            boxsep=5pt,              % Add 10pt margins at the top and bottom
            boxrule=1pt,              % No border rule
            #1                        % Other optional settings

        ]%
        }%
        {%
    \end{tcolorbox}%
    \vspace{0cm}
}
% for deinition
\newenvironment{define}[1][]%
{%
    \begin{tcolorbox}[
            colback=defineBg,  % Background color
            boxsep=2pt,             % Padding
            colframe=defineBg,
            boxrule=0pt
            #1                      % Other optional settings
        ]%
        }%
        {%
    \end{tcolorbox}%
}
